<% content_for :jquery_script do %>
  $('.new_post_form').enable_submit_if_possible('textarea#post_text');
<% end %>

<p id="notice"><%= notice %></p>

<div class="talk-page">
  <h1>
    <span class="title"><%= @talk.title %></span> 
    <span class="topic"><%= @talk.topic.name %></span>
  </h1>

  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
  
  <%= form_for @post, :html => { :class => 'new-post-form' } do |f| %>
    <%= f.hidden_field :talk_id %>
    <div class="field">
      <%= f.label :text, 'Answer' %><br />
      <%= f.text_area :text, :size => '50x8' %>
      <%= f.submit %>
    </div>
  <% end %>
</div>
