<%= form_for @talk, :html => { :class => 'new_talk_form' } do |f| %>
  <% if @talk.errors.any? or @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('error_msg', :count => @post.errors.count) %></h2>
    
      <ul>
      <% @talk.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.hidden_field :topic_id %>
  
  <div class="field">
    <%= f.label :title, t('.title') %><br />
    <%= f.text_field :title %>
  </div>

  <%= render :partial => 'posts/form', :locals => { :post => @post } %>

  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>
