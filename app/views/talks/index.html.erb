<h1>Listing talks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Started at</th>
    <th>Topic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @talks.each do |talk| %>
  <tr>
    <td><%= talk.title %></td>
    <td><%= talk.started_at %></td>
    <td><%= talk.topic_id %></td>
    <td><%= link_to 'Show', talk %></td>
    <td><%= link_to 'Edit', edit_talk_path(talk) %></td>
    <td><%= link_to 'Destroy', talk, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

