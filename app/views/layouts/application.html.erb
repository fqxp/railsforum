<!DOCTYPE html>
<html>
<head>
  <title><%= t('.forum_title') %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <script>
    $(document).ready(function() {
      <%= yield :jquery_script %>
    })
  </script>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
    <div id="header">
      <div class="navigation">
        <% if session[:user_id] %>
  	      <%= link_to t('.settings'), edit_user_path(session[:user_id]) %>
  	      <%= link_to t('.invite'), invite_path %>
  	      <%= link_to t('.log_out'), logout_path %>
        <% end %>
       </div>
	  </div>
    <div id="main">
    	<div class="content">
    	  <div class="content-inner">
      		<%= yield %>
    		</div>
    	</div>
    	<div id="sidebar">
        <ul class="topics">
          <li>
            <%= link_to t('.start_page'), root_path, :class => ((request.path=='/') ? 'current' : '') %>
          </li>
          <% @topics.each do |topic| %>
            <li>
              <%= link_to topic, :class => ((defined?(@current_topic) && topic.id == @current_topic.id) ? 'current' : '') do %>
                    <%= topic.name %>
                    <span class="count"><%= topic.talks.count %></span>
              <% end %>
            </li>
          <% end %>
          <%= yield :navigation %>
        </ul>
    	</div>
    </div>
  </div>
</body>
</html>
