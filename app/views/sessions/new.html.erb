<% content_for :jquery_script do %>
  $('form').enable_submit_if_possible('input#username, input#password');
  $('input#username').focus();
<% end %>

<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>

<h1><%= t('.title')%></h1>
<fieldset>
  <%= form_tag do %>
    <div class="field">
      <%= label_tag :username, t('.username') %>
      <%= text_field_tag :username, params[:username] %>
    </div>
    <div class="field">
      <%= label_tag :password, t('.password') %>
      <%= password_field_tag :password, params[:password] %>
    </div>
    
    <div class="actions">
      <%= submit_tag t(".login") %>
    </div>
  <% end %>
</fieldset>
